<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div id="box-sign-in">
    <h2 style="position: absolute; font-size: 36px; font-weight: bold; margin-left: 18px; color: rgb(122, 194, 244);">Sign-up</h2>
    <div id="image-sign-in">
      <%= image_tag("/images/birds_64/12.png") %>
    </div>

    <div class="inputs" style="">
      <%= f.input :email, :required => true, :autofocus => true, :placeholder => "you@example.com" %>
      <div style="display: none;">
        <%= f.input :referal_id, :value => params[:referal_id] %>
      </div>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :required => true %>
    </div>
    <div class="actions" style="margin-top: 40px;">
      <%= f.button :submit, "", :class => "button-sign-up" %>
    </div>
    <div style="clear:both;"></div>
  </div>
<% end %>

<%= javascript_tag("jQuery(document).ready(function() {
  if (jQuery('span.error').text() == 'is too short (minimum is 6 characters)')
  {
  jQuery('span.error').css('margin-left','-42px')
  }
  else
  {
  jQuery('span.error').css('margin-left','-94px')
  }
  })") %>