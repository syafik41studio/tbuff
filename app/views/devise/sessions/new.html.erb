<div id="image-sign-in">
  <%= image_tag("/images/birds_64/6.png") %>
</div>
<div id="box-sign-in">
  <h2>Sign in</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="inputs">
      <%= f.input :email, :required => false, :autofocus => true, :size=>"25" %>
      <%= f.input :password, :required => false, :size=>"25" %>
      <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="actions">
      <%= f.button :submit, "", :class => "button-sign-in" %>
    </div>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>