<div id="box-sign-in">
  <h2 style="color: rgb(49, 133, 195); position: absolute; font-size: 36px; font-weight: bold; margin-left: 18px;">Sign-in</h2>
  <div id="image-sign-in">
    <%= image_tag("/images/birds_64/6.png") %>
  </div>
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="inputs">
      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, :required => false, :size=>"25" %>
    </div>
    <div class="actions">
      <%= f.button :submit, "", :class => "button-sign-in" %>
    </div>
    <div class="remember">
      <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    </div>
  <% end %>
  <div style="clear:both;"></div>
  <%= render :partial => "devise/shared/links" %>
</div>