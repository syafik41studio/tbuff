- old_buffer = nil
- today = Date.today
- @order_buffers = BufferPreference.where("status = ? AND twitter_user_id =?", "uninitialized", @twitter_user.id).order("run_at ASC")
- active_time = @order_buffers.first.run_at.to_date rescue today
- @order_buffers.each_with_index do |buffer, i|
  - if active_time != buffer.run_at.to_date or i == 0
    %div{:style => "background: #79C1F3; margin: 5px 0 5px 0; "}
      %span{:style => "color: #fff; font-weight: bold;"}
        = show_buffer_date_title(buffer)    
        - active_time = buffer.run_at.to_date
  #new_buffer_name_container{:id => buffer.id, :style => "text-align: left;", :class =>cycle("even","odd"), :onmouseover => "$('#actions_#{buffer.id}').css('visibility','visible');", :onmouseout => "$('#actions_#{buffer.id}').css('visibility','hidden')"}
    = buffer.name
    %br
    %span{:style => "color: #7BC2EE; font-style: italic; font-size: 13px;"}
      - a = (buffer.run_at.strftime('%H')).to_i
      - hour = ((buffer.run_at.strftime('%H')).to_i - 12).to_s
      - minute = (buffer.run_at.strftime('%M'))
      = "Queued for #{buffer.run_at.strftime('%I:%M %p')}" unless buffer.run_at.nil?
    %span{:id => "actions_#{buffer.id}", :style => "float: right; visibility: hidden; margin-top: -15px;"}
      #tweet_now{:onclick => ""}
        = link_to image_tag("/images/twitter.png"), tweet_from_buffer_path(buffer.id), :params => "twitter_name"
      #edit_buffer{:onclick => "$('#loader-edit-buffer').show();"}
        = link_to image_tag("/images/edit.png"), edit_buffer_path(buffer.id), :remote => true
      #delete_buffer{:onclick => ""}
        = link_to image_tag("/images/close-icon.png"), delete_buffer_path(buffer.id)