#buffer_wrapper
  - old_buffer = nil
  - today = Date.today
  - active_time = @buffer_success.first.deleted_at.to_date rescue today
  //- @order_buffers.each_with_index do |buffer, i|
  - @buffer_success.each_with_index do |buffer, i|
    - if active_time != buffer.deleted_at.to_date or i == 0
      %div{:style => "background: #79C1F3; margin: 5px 0 5px 0; "}
        %span{:style => "color: #fff; font-weight: bold;"}
          = show_buffer_published_date_title(buffer)
          - active_time = buffer.deleted_at.to_date
        //= "Today (#{Time.now.strftime('%b %d')})"
    //#buffer_name_container{:id => buffer.id, :style => "text-align: left;", :class =>cycle("even","odd"), :onmouseover => "$('#actions_#{buffer.id}').css('visibility','visible');", :onmouseout => "$('#actions_#{buffer.id}').css('visibility','hidden')"}
    #buffer_name_container{:id => buffer.id, :style => "text-align: left;", :class =>cycle("even","odd")}
      = buffer.name
      %br
      %span{:style => "color: #7BC2EE; font-style: italic; font-size: 13px;"}
        - a = (buffer.deleted_at.strftime('%H')).to_i
        - hour = ((buffer.deleted_at.strftime('%H')).to_i - 12).to_s
        - minute = (buffer.deleted_at.strftime('%M'))
        = "Published at #{buffer.deleted_at.strftime('%I:%M %p')}" unless buffer.deleted_at.nil?
        %span{:style => "font-style: italic; color: rgb(39, 110, 162); font-size: 12px;"}
          = "#{@like_feed} people like this "
          - unless @comment_feed.nil?
            = "--#{@comment_feed} people commented in this post."
      //%span{:id => "actions_#{buffer.id}", :style => "float: right; visibility: hidden; margin-top: -15px;"}
      %span{:id => "actions_#{buffer.id}", :style => "float: right; margin-top: -15px;"}
        #tweet_now{:onclick => ""}
          = image_tag("/images/users-reached.png")
        #reached_buffer
          = @reached
        #delete_buffer{:onclick => "", :style => "display: none;"}
          = link_to image_tag("/images/close-icon.png"), delete_buffer_path(buffer.id)